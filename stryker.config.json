{
  "$schema": "https://raw.githubusercontent.com/stryker-mutator/stryker/master/packages/core/schema/stryker-core.json",
  "testRunner": "vitest",
  "vitest": {
    "configFile": "vitest.config.ts"
  },
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/index.ts",
    "!src/cli/**",
    "!src/categories/definitions/**"
  ],
  "reporters": ["clear-text", "json"],
  "jsonReporter": {
    "fileName": "mutation-report.json"
  },
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": null
  },
  "concurrency": 2,
  "timeoutMS": 30000
}
